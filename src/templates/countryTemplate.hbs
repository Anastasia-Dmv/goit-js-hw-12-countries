<h2 class="name">{{name}}</h2>
<div class="container">
    <ul class="list">
        <li class="list-items capital"><b>Capital:</b> {{capital}}</li>
        <li class="list-items population"><b>Population:</b> {{population}}</li>
        <li class="list-items languages"><b>Languages:</b>
            <ul class="languages-list">
                {{#each languages}}
                <li class="languages_item">
                    {{this.name}}
                </li>
                {{/each }}

            </ul>
        </li>
    </ul>
    <img src="{{flag}}" alt="flag of {{name}} " width="320">
</div>
